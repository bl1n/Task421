<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <team.lf.task421.CustomView
        android:id="@+id/customView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:count="0"
        app:layout_constraintStart_toEndOf="@+id/customView2"
        app:layout_constraintTop_toTopOf="@+id/customView2"
        app:total="4" />

    <team.lf.task421.CustomView
        android:id="@+id/customView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:count="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:total="4" />

    <team.lf.task421.CustomView
        android:id="@+id/customView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:colorBackground="@color/colorPrimary"
        app:colorMain="@color/colorAccent"
        app:colorSecondary="@color/colorPrimaryDark"
        app:count="1"
        app:layout_constraintStart_toEndOf="@+id/customView1"
        app:layout_constraintTop_toTopOf="@+id/customView1"
        app:total="4" />

    <team.lf.task421.CustomView
        android:id="@+id/customView3"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="140dp"
        app:count="9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customView1"
        app:total="20" />


</androidx.constraintlayout.widget.ConstraintLayout>